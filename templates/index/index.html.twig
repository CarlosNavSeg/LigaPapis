                        <h2 class="username">
                            {{papi.User.Nombre}}
                        </h2>
                        <p class="memberMessage">
                            {{papi.mensaje}}
                        </p>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-4 publicacionTable">
            {% for publi in publis %}
                <div class="publicacion">
                    <img src={{asset('publicaction_images/' ~ publi.Image) }} alt="imagen publi" class="img-responsive"/>
                    <p>{{ publi.PieDeFoto}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
